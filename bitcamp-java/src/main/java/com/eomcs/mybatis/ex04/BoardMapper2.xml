<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="BoardMapper">

  <resultMap type="Board" id="BoardMap">
    <id column="board_id" property="no"/>
    <!-- 
    <result column="title" property="title"/>
    -->
    <result column="contents" property="content"/>
    <result column="created_date" property="registeredDate"/>
    <result column="view_count" property="viewCount"/>
 		
 		<collection property]="files" ofType="AttachFile">
    	<id column="board_file_id" property="no"/> //프라이머리키는 항상 받아라.
    <result column="file_path" property="filePath"/>
    <result column="board_id" property="boardNo"/>
  </collection>
  </resultMap>
  
  
  <select id="selectBoardWithFile" resultMap="BoardMap" parameterType="int">
    select 
      b.board_id,
      b.title, 
      b.contents, 
      b.created_date,
      b.view_count,
      f.board_file_id,
      f.file_path 
    from x_board b 
    	inner join x_board_file f on b.board_id=f.board_id
   	where b.board_id= #{no}
    
    <if test="no != null">
      where board_id = #{no}
    </if>
  </select>
  
  <select id="selectFile" 
          resultMap="AttachFileMap" 
          parameterType="int">
    select 
      board_file_id,
      file_path
    from x_board_file
    where board_id = #{no}
  </select>

</mapper>







